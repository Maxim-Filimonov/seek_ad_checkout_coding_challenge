{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "src",
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  }
}
